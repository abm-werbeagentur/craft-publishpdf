{% extends "_layouts/cp" %}
{% set selectedSubnavItem = 'abmat-publishpdf-issuu' %}

{% set title = 'Issuu' %}

{% block content %}
    {% if documents is not null %}
        {% if documents.results|length > 0 %}
            <h2>Documents (max. 50 documents are shown)</h2>
            <table class="data fullwidth"> 
                <thead>
                    <tr>
                        <th>Slug (ID)</th>
                        <th>Title</th>
                        <th>Link</th>
                        <th>Pages</th>
                    </tr>
                </thead>

                <tbody>
                    {% for document in documents.results %}
                        <tr>
                            <td class="thin">{{ document.slug }}</td>
                            <td>{{ document.title }}</td>
                            {# <td class="thin"><a href="{{ document.url }}" target="_blank" rel="noopener noreferrer">{{ document.short_url }}</a></td>
                            <td class="thin">{{ document.pages }}</td> #}
                            <td class="thin">{{ document.publicLocation }}</td>
                            <td class="thin">{{ document.fileInfo.pageCount }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <h2>No documents uploaded to Yumpu</h2>
        {% endif %}
    {% else %}
        <h2>No documents found on Yumpu</h2>
    {% endif %}
{% endblock %}