    name: 'issuuEnable',
    label: 'Enable Issuu' | t('imhomedia-publishpdf'),
    on: settings.issuuEnable
}) }}


{{ forms.textField({
  label: 'Issuu API Token',
  name: 'issuuApiToken',
  value: settings.issuuApiToken
}) }}

